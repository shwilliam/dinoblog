<%- include('../partials/site-head') -%>

<body>
  <header>
    <h1>New post</h1>
    <%- include('../partials/blog-nav') -%>
  </header>
  <main>
    <form action="/_new" method="POST" id="new-post-form">
      <label>
        Title
        <br>
        <input
          name="title"
          placeholder="Awesome Post"
          type="text"
          required
        >
      </label>
      <br>

      <label>
        Slug
        <br>
        <input
          name="slug"
          placeholder="awesome-post"
          type="text"
          required
        >
      </label>
      <br>

      <label>
        Content
        <br>
        <textarea name="content" form="new-post-form" placeholder="Dinos are awesome"></textarea>
      </label>
      <br>

      <label>
        Password
        <br>
        <input
          name="password"
          type="password"
          required
        >
      </label>
      <br>

      <button type="submit">Publish</button>
    </form>
  </main>
</body>

<%- include('../partials/site-footer') -%>
